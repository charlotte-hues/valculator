{
  "private": true,
  "workspaces": {
    "packages": [
      "./packages/main",
      "./packages/interface",
      "./packages/context",
      "./packages/data",
      "./packages/theme",
      "./packages/images",
      "./packages/cdk"
    ]
  },
  "scripts": {
    "dev": "yarn workspace main dev",
    "lint": "yarn workspaces foreach --all -p run lint",
    "test:circular": "yarn workspaces foreach --all -p run test:circular",
    "build": "yarn workspace main build",
    "deploy:images": "yarn workspace cdk run cdk deploy"
  },
  "packageManager": "yarn@4.1.0"
}
