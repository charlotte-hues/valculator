{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "command": {
    "version": {
      "allowBranch": ["config/lerna"],
      "conventionalCommits": true
    },
    "publish": {
      "registry": "https://npm.pkg.github.com",
      "scope": "@valculator",
      "conventionalCommits": true,
      "yes": true,
      "verifyAccess": false
    }
  }
}
